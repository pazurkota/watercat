<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="watercat.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:watercat.Pages"
    Shell.FlyoutBehavior="Disabled">
    
    <TabBar>
        <Tab Title="Settings">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}"></ShellContent>
        </Tab>
        <Tab Title="Main Page">
            <ShellContent ContentTemplate="{DataTemplate pages:MainPage}"></ShellContent>
        </Tab>
    </TabBar>
    
</Shell>
