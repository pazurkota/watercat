<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="watercat.Pages.WeeklyStatsPage">
    <StackLayout>
        <ListView x:Name="WeeklyStatsListView" ItemsSource="{Binding WeeklyIntakes}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Date}" Detail="{Binding Intake}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>